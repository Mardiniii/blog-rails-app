<%= form_for([@article, @article.comments.build]) do |f| %>
  
  <div class="field form-group">
    <%= f.label :body %><br>
    <%= f.text_area :body, :class => "form-control"  %>
  </div>

  <div class="actions form-group text-right">
    <%= f.submit 'Add Comment', :class => 'btn btn-success' %>
  </div>

<% end %>