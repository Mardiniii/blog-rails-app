<div class="row">
	<div class="col-md-6 col-md-offset-3">
		<div class="panel panel-default">
			<div class="panel-body">
				<div class="panel panel-default">
					<div class="panel-body">
						<div class="content">
							<h3 class="line_in_block"><%= @article.title %></h3>
							<span class="text-right right_text" ><%= @article.created_at %></span>
						</div>
						<p><%= @article.text %></p>
						<p><strong>By: </strong><%= @article.author %></p>
					</div>
				</div> 
				<h2>Comments</h2>
				<% @comments.each do |f| %>
					<div class="panel panel-default">
						<div class="panel-body">
							<%= render 'comments/comment', :comment => f %>
						</div>
					</div>
				<% end %>		
				
				<div class="panel panel-default">
					<div class="panel-body">
						<h2>Add a comment:</h2>
						<%= render "comments/form" %>
					</div>
				</div>

				</div>
			</div>
		</div>
	</div>
</div>
 

