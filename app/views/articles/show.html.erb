<div class="row">
	<div class="col-md-10 col-md-offset-1">
		<div class="panel panel-default">
			<div class="panel-body">
				<div class="panel panel-default">
					<div class="panel-body">
						<div class="content">
							<h3 class="line_in_block"><%= @article.title %></h3>
							<span class="text-right right_text" ><%= @article.created_at %></span>
						</div><hr>
						<div class="row">
						 	<div class="col-md-3 text-center">
						    	<%= image_tag Gravatar.new(@article.user.email).image_url(s: 150) %>
						  	</div>
						  	<div class="col-md-9 text-justify">
						    	<%= @article.text %>
						  	</div>
						</div> <!-- Close row -->
						<p class="text-right"><strong>By: </strong><%= @article.user.name %></p>
					</div>
				</div> 
				<h2>Comments</h2>
				<% @comments.each do |f| %>
					<div class="panel panel-default">
						<div class="panel-body">
							<%= render 'comments/comment', :comment => f %>
						</div>
					</div>
				<% end %>

				<% if user_signed_in? %>
					<div class="panel panel-default">
						<div class="panel-body">
							<h2>Add a comment:</h2>
							<%= render "comments/form" %>
						</div>
					</div>
				<% end %>
				
				</div>
			</div>
		</div>
	</div>
</div>
 

